# Django Configuration
SECRET_KEY=your-super-secret-django-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Database Configuration
# SQLite (default for development)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# PostgreSQL (recommended for production)
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=scraping_platform
# DB_USER=postgres
# DB_PASSWORD=your_db_password
# DB_HOST=localhost
# DB_PORT=5432

# MySQL (alternative option)
# DB_ENGINE=django.db.backends.mysql
# DB_NAME=scraping_platform
# DB_USER=mysql_user
# DB_PASSWORD=your_db_password
# DB_HOST=localhost
# DB_PORT=3306

# Scheduler Configuration
SCHEDULER_DATABASE_URL=sqlite:///scheduler_jobs.sqlite
SCHEDULER_MAX_WORKERS=10

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://127.0.0.1:6379/1

# Scraping Configuration
SCRAPING_USER_AGENT=ScrapingPlatform/1.0 (+https://your-domain.com/bot)
SCRAPING_DEFAULT_TIMEOUT=30
SCRAPING_MAX_RETRIES=3
SCRAPING_RETRY_DELAY=5
SCRAPING_RESPECT_ROBOTS=True

# Security Settings (for production)
SECURE_SSL_REDIRECT=False
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY

# Email Configuration (optional, for notifications)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# API Keys and External Services
# Add your external API keys here
# EXTERNAL_API_KEY=your-external-api-key
# WEBHOOK_SECRET=your-webhook-secret

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/django.log

# Performance Settings
CACHE_TIMEOUT=300
SESSION_COOKIE_AGE=3600
